                    <EditText
                        android:id="@+id/editTextTextPersonName9"
                        android:layout_width="0dp"
                        android:layout_height="68dp"
                        android:theme="@style/MyEditTextTheme"
                        android:maxLength="20"
                        android:hint="@string/email_id"
